<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
    {% endblock %}
</head>
<body>

<div class="container">

    {% block body %}
        <div class="row">

            <div class="col-xs-6">
                <ul class="nav nav-pills nav-stacked">
                    <li role="presentation">
                        <a href="{{ path('admin_segment', {segment: 'products'}) }}">Products</a>
                    </li>

                    <li role="presentation"><a href="#">Profile</a></li>
                    <li role="presentation"><a href="#">Messages</a></li>
                </ul>
            </div>

            <div class="col-xs-6">
                {% block detailed %}
                {% endblock detailed %}
            </div>

        </div>

    {% endblock %}

</div>

{% block javascripts %}
    <script src="{{ asset('build/js/app.js') }}"></script>
{% endblock %}
</body>
</html>
